<h1>Listing sections</h1>

<% @sections.each do |section| %>
<table border='2'>
  <tr>
    <th colspan='2'><%= section.class_string %></th>
    <th colspan='3'><%= section.name %></th>
  </tr>
  <tr>
    <td><%= section.section_number %></td>
    <td>Start time</td>
    <td>10:00</td>
    <td>End time</td>
    <td>11:15</td>
  </tr>
  <tr>
    <td><%= link_to 'Detailed', section %></td>
    <td colspan='3'></td>
    <td><%= link_to 'Delete', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
</table>
<br />
<% end %>


