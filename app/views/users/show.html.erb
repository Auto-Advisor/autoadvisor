<table id='profile'>
  <tr valign=top>
    <td>
      <litem>Name</litem>
    </td><td>
      <p class='ritem'><%= @user.email %></p>
    </td>
  </tr><tr valign=top>
    <td>
      <litem>Major</litem>
    </td><td>
      <p class='ritem'>
        <% @user.majors.each do |major| %>
          <%= major.degree %> <%= major.name %><br/>
        <% end %>
      </p>
    </td>
  </tr><tr valign=top>
    <td>
      <litem>Course</litem>
    </td><td>
      <p class='ritem'>
        <% @user.schedule.each do |section| %>
          <%= section.class_string %> <br />
        <% end %>
      <%= link_to 'See my Schedule', '/schedule' %> 
</p>
</td>
</tr>
<tr valign=top>
<td>
<litem>Credit</litem>
</td><td>
<p class='ritem'>
  <% @user.transcript.each do |c| %>
    Number: <%= c.string %>
    Name: <%= c.name %><br />
    Grade: <%= c.grade %><br />
    Year: <%= c.year %><br />
  <% end %>
</p>
</td></tr>
<tr valign=top>
<td>
<litem>GPA</litem>
</td><td>
<p class='ritem'>
  <%= "%.3f" % @user.gpa %>
</p>
</td></tr>
</table>
